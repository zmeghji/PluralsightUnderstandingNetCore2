@model Shared.ProposalModel
<form asp-action="Add" >
    <input type="hidden" value="@Model.ConferenceId" asp-for="ConferenceId" />
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="Title">Title</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" asp-for="Title" />
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="Speaker">Speaker</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" asp-for="Speaker" />
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-2 offset-md-4">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>

</form>